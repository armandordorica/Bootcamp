
<h1>Friends List Goes Here!</h1>

<% friends.forEach(function(friend){ %>
  <!--<li>I have a friend</li>-->
  <!--To actually pring out the names of the friends, i.e. the contents of the array -->
  <li><%= friend%></li>
  <!--Note that friend is the input of the argument in the forEach function-->
  
<% }); %>

<form action="/addfriend" method="POST">
    <!--"/addfriend" must match the app.post function in the app.js function-->
    <input type="text" name="newfriend" placeholder="name">
    <button>I made a new friend!</button>
</form>